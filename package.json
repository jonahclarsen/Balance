        "make": "electron-forge make"
    },
    "dependencies": {},
    "devDependencies": {
        "electron": "^31.3.1",
        "@electron-forge/cli": "^7.9.0",
        "@electron-forge/maker-dmg": "^7.9.0",
        "@electron-forge/maker-zip": "^7.9.0",
        "@sveltejs/vite-plugin-svelte": "^3.1.1",
        "npm-run-all": "^4.1.5",
        "svelte": "^4.2.18",
        "vite": "^5.3.3",
        "wait-on": "^7.2.0"
    },
    "pnpm": {
        "ignoredBuiltDependencies": [
            "electron",
            "esbuild"
        ]
    }
