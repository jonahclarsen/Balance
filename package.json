{
    "name": "balance",
    "version": "0.1.0",
    "private": true,
    "main": "electron/main.js",
    "type": "commonjs",
    "scripts": {
        "dev": "run-p dev:renderer dev:electron",
        "dev:renderer": "VITE_DEV_PORT=5174 vite --port 5174",
